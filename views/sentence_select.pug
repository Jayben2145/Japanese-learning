extends layout

block content
  h2 Sentence Practice Options
  form(action="/sentences/start", method="POST")
    label(for="lessons") Lessons:
    select(name="lessons" id="lessons" multiple style="min-width:80px")
      option(value="1" selected) 1
      option(value="2") 2
      option(value="3") 3
      option(value="4") 4
      option(value="5") 5
    br
    label
      input(type="checkbox", name="random")
      |  Random Order
    br
    button(type="submit") Start
